{% extends "layout.jinja2" %}

{% block title %}
Products
{% endblock %}

{% block content %}
<table class="table table-hover table-inverse">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    {% if products %}
    {% for product in products %}
    <tr>
        <td> {{ product.id }}</td>
        <td> {{ product.name }}</td>
        <td> {{ product.price }}</td>
        <td>
            {% if request.authenticated_userid %}
            <a href="{{ request.route_url('add_product', id=product.id) }}">Add to Basket</a>
            {% endif %}
        </td>
    </tr>
    {% endfor %}
    {% endif %}
    </tbody>
</table>
{% endblock %}
